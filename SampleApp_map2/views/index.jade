// views/index.jade
extends layout

block content
  h1 jQUeryとRequire.jsによる地図テスト
  div#map-canvas(style="width : 600px; height : 300px;")

  div
    p 緯度
      span#lat
    p 経度
      span#lng

    script.
      var require = {
        urlArgs : 'bust=' + (new Date()).getTime(),
        baseUrl : 'javascripts',
      };
    script(type="text/javascript", src="javascripts/require-jquery.js", data-main="index.js")

